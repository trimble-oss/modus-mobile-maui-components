<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trimble.Modus.Components.Controls.TMRadioButton.RadioButtonStyles"
             xmlns:local="clr-namespace:Trimble.Modus.Components">
  <Style TargetType="local:TMRadioButtonGroup" x:Key="RadioButtonGroupStyle">
    <Setter Property="TextColor" Value="{DynamicResource RadioButtonTextColor}"/>
  </Style>
  <Style TargetType="local:TMRadioButton" x:Key="RadioButtonStyle">
    <Setter Property="TextColor" Value="{DynamicResource RadioButtonTextColor}"/>
    <Setter Property="IconTintColor" Value="{DynamicResource RadioButtonColor}"/>
  </Style>
</ResourceDictionary>