<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trimble.Modus.Components.Controls.TMDataGrid.DataGridStyle"
             xmlns:local="clr-namespace:Trimble.Modus.Components">
  <Style TargetType="local:DataGrid" x:Key="DataGridStyle">
    <Setter Property="ActiveRowColor" Value="{DynamicResource DataGridActiveRowColor}"/>
    <Setter Property="DefaultRowColor" Value="{DynamicResource DataGridDefaultRowColor}"/>
    <Setter Property="HeaderBackgroundColor" Value="{DynamicResource DataGridHeaderColor}"/>
  </Style>
</ResourceDictionary>

