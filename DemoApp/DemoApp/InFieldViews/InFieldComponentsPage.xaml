<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoApp.InFieldComponentsPage"
             xmlns:modus="http://modus.trimble.com/components"
             Title="InFieldComponentsPage">
  <modus:TMListView ItemsSource="{Binding ControlNames}"
                    ItemTapped="TMListView_ItemTapped">
    <modus:TMListView.ItemTemplate>
      <DataTemplate>
        <modus:TextCell Title="{Binding}"></modus:TextCell>
      </DataTemplate>
    </modus:TMListView.ItemTemplate>
  </modus:TMListView>
</ContentPage>
